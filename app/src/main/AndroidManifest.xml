<?xml version="1.0" encoding="utf-8"?>
<manifest xmlns:android="http://schemas.android.com/apk/res/android"
          package="com.dylanc.loadinghelper.sample">

  <uses-permission android:name="android.permission.ACCESS_NETWORK_STATE"/>
  <uses-permission android:name="android.permission.INTERNET"/>

  <application
    android:name="com.dylanc.loadinghelper.sample.App"
    android:allowBackup="true"
    android:icon="@drawable/ic_logo"
    android:label="@string/app_name"
    android:supportsRtl="true"
    android:theme="@style/AppTheme"
    android:screenOrientation="portrait">
    <activity android:name="com.dylanc.loadinghelper.sample.MainActivity">
      <intent-filter>
        <action android:name="android.intent.action.MAIN"/>

        <category android:name="android.intent.category.LAUNCHER"/>
      </intent-filter>
    </activity>
    <activity android:name="com.dylanc.loadinghelper.sample.practise.ActErrorActivity"/>
    <activity android:name="com.dylanc.loadinghelper.sample.practise.FragmentEmptyActivity"/>
    <activity android:name="com.dylanc.loadinghelper.sample.practise.ViewPlaceholderActivity"/>
    <activity android:name="com.dylanc.loadinghelper.sample.practise.ViewPagerActivity"/>
    <activity android:name="com.dylanc.loadinghelper.sample.practise.RecyclerViewActivity"/>
    <activity android:name="com.dylanc.loadinghelper.sample.practise.SearchTitleActivity"/>
  </application>

</manifest>